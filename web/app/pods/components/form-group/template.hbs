<div local-class="form-group" ...attributes>
	{{#if @label}}
		<label local-class="label" for={{this.id}}>{{@label}}</label>
	{{/if}}

	{{#if @description}}
		<label local-class="description" for={{this.id}}>{{@description}}</label>
	{{/if}}

	{{yield this.id}}

	{{#if @error}}
		<small local-class="error">{{@error}}</small>
	{{/if}}
</div>