{
	"name": "@spomoda/server",
	"version": "1.0.0",
	"description": "spomoda",
	"keywords": [
		"spomoda"
	],
	"license": "MIT",
	"scripts": {
		"clean": "rm -rf server",
		"build": "babel src --out-dir server --extensions '.ts,.js'",
		"lint": "yarn tslint --project .",
		"setup": "yarn build; cp -R res/* server/",
		"start": "yarn setup; wolkenkit start; yarn clean",
		"reload": "yarn setup; wolkenkit reload; yarn clean"
	},
	"wolkenkit": {
		"application": "spomoda",
		"runtime": {
			"version": "3.0.0"
		},
		"environments": {
			"default": {
				"api": {
					"address": {
						"host": "local.wolkenkit.io",
						"port": 3000
					},
					"allowAccessFrom": "*"
				},
				"fileStorage": {
					"allowAccessFrom": "*"
				},
				"identityProvider": {
					"name": "https://gossi.eu.auth0.com/",
					"certificate": "/server/keys/auth0"
				},
				"node": {
					"environment": "development"
				}
			}
		}
	},
	"dependencies": {
		"slugify": "^1.3.4",
		"wolkenkit-command-tools": "^3.0.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.2.2",
		"@babel/preset-env": "^7.2.3",
		"@babel/preset-typescript": "^7.1.0",
		"tslint": "^5.12.0",
		"tslint-config-prettier": "^1.17.0",
		"typescript": "^3.2.2"
	}
}
